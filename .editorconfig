# EditorConfig - Generated from nixline-baseline
# This file defines consistent coding styles for this repository
# See: https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = 1
trim_trailing_whitespace = 1

[*.go]
indent_style = tab
tab_width = 4

[*.{js,jsx}]
indent_size = 2
indent_style = space

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.nix]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4
indent_style = space
max_line_length = 88

[*.rs]
indent_size = 4
indent_style = space
max_line_length = 100

[*.{ts,tsx}]
indent_size = 2
indent_style = space

[*.{yml,yaml}]
indent_size = 2
indent_style = space
